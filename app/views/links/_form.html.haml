= form_for([@link.task, @link]) do |f|
  - if @link.errors.any?
    #error_explanation
      %h2
        = pluralize(@link.errors.count, "error")
        prohibited this link from being saved:
      %ul
        - @link.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :link_title
    %br/
    = f.text_field :link_title
  .field
    = f.label :url
    %br/
    = f.text_field :url
  .field
    = f.label :link_type
    %br/
    = f.text_field :link_type
  .actions
    = f.submit

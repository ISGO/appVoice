= form_for(@task) do |f|
  - if @task.errors.any?
    #error_explanation
      %h2
        = pluralize(@task.errors.count, "error")
        prohibited this task from being saved:
      %ul
        - @task.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :task_title
    %br/
    = f.text_field :task_title
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :instructions
    %br/
    = f.text_area :instructions
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .actions
    = f.submit
